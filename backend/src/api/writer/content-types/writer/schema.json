{
  "kind": "collectionType",
  "collectionName": "writers",
  "info": {
    "singularName": "writer",
    "pluralName": "writers",
    "displayName": "Writer"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "minLength": 1
    },
    "email": {
      "type": "string",
      "private": true,
      "unique": true
    },
    "avatar": {
      "allowedTypes": [
        "images",
        "files"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "articles": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::article.article",
      "mappedBy": "writer"
    }
  }
}
